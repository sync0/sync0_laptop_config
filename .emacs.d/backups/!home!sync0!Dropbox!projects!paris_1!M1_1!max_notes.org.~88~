#+BEGIN_SRC sas
DATA base1;
set TDTQ.TD1;
RUN;

DATA base1;
SET base1;
inf_smic=(sal_smic<1);
p3smic=(sal_smic>3);
RUN;

DATA base2;
SET base1;
IF sal_smic<1 THEN inf_smic=1;
ELSE inf_smic=0;
IF sal_smic>3 THEN p3smic
/*...*/
RUN;

DATA base1bis;
SET base1;
IF sal_smic>1;
RUN;

DATA base2;
SET base1;
    IF sal_smic<1 THEN sal_qua1="1";
ELSE IF sal_smic<1.5 THEN sal_qual="2";
ELSE IF sal_smic<2 THEN sal_qual="3";
ELSE sal_qual="4";
RUN;
#+END_SRC
*** PROC 
**** PROC FREQ
#+BEGIN_SRC sas
PROC FREQ data=base2;
TABLES sal_qual;
/* weight extrian; */
RUN;
#+END_SRC
**** PROC MEANS
#+BEGIN_SRC sas
PROC MEANS data=base2;
VAR sal_smic;
RUN;
#+END_SRC
- Les salaires s'ecartend en moyenne 1.07 de la moyenne. 
**** PROC UNIVARIATE
- Sans ponderation
  - N: Taille de l'echantillon.
  - Sum Weights: Meme nombre.
- Pondere
  - N: Taille de l'echantillon.
  - Sum Weights: Population dont l'echantillon est representative.
- Skewness: Measure of 
- Kurtosis: 
- Uncorrected SS: Sum de carre' des observations.
- Corrected SS: Sum of squares corrected by the degrees of freedom.
- Coefficient de Variation: 
  - $CV = S_n/\mu$
- Median: 
- Range: Etendu 
- Interquartile Range: $Q_3 - Q_1$
- Allure de la distribution:
  - Distribution etalle a droite.
- Observations extremes:
**** PROC TTEST
**** PROC CORR
**** PROC REG
**** PROC LOGISTIC
**** PROC FORMAT
#+BEGIN_SRC sas
PROC FORMAT $salqual
"1"="moins de 1 smic"
"2"="de 1 smic a moins de 1.5"
"3"="de 1.5 smic a moins de 2"
"4"="2 smic et plus";
RUN;

PROC FREQ data=base2;
TABLE sal_qual;
FORMAT sal_qual $sal_qual.;
RUN;
#+END_SRC
**** PROC GCHART
#+BEGIN_SRC sas
PROC GCHART data=base2;
VBAR sal_smic;
RUN; 
#+END_SRC
**** PROC SGPLOT
#+BEGIN_SRC sas
PROC SGPLOT data=base2;
VBOX sal_smic;
RUN;
#+END_SRC
- Boite à mustache
  - La ligne c'est pas plus de 1.5 fois l'interquartile range.
  - Il faut etre toujours atttentive a FM (frequency missing).
#+BEGIN_SRC sas
PROC FREQ data=base2;
TABLE inf_smic p3smic/missing;
RUN;
#+END_SRC
**** PROC GPLOT
